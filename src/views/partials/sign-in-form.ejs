<form method="POST" action="/" class="form">
  <h4>Sign In</h4>
  <p class="form-card-p">Enter your credentials to access your account</p>
  <label for="user_email">Email</label>
  <input
    type="email"
    name="email"
    id="user_email"
    required
    placeholder="your@email.com"
  />
  <label for="user_password">Password</label>
  <input
    type="password"
    name="pass"
    id="user_password"
    required
    placeholder="Enter your password"
  />
  <button type="submit" class="action-button">Sign In</button>

  <div class="guest-or">
    <hr />
    <p>or</p>
    <hr />
  </div>

  <a href="/mainPage"
    ><button type="button" class="guest-button">Continue as Guest</button></a
  >

  <div class="call-to-action">
    <p>
      No account? No problem! <a class="action-link" href="/signup">Sign up</a>
    </p>
  </div>
</form>
